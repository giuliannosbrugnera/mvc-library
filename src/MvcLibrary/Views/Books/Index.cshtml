@model BookGenreViewModel

@{
    ViewData["Title"] = "Books";
}

<div class="page-header">
    <h1>
        @ViewData["Title"]
        <small>
            <a class="btn btn-success" asp-action="Create">Create New <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        </small>
    </h1>
</div>

<form class="form-inline" asp-controller="Books" asp-action="Index" method="get">
    <div class="form-group">
        <select class="form-control" asp-for="bookGenre" asp-items="Model.genres">
            <option value="">All</option>
        </select>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="SearchString" placeholder="Book title..." />
    </div>
    <button type="submit" class="btn btn-primary">Filter <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
</form>

<hr />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].Author.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.books[0].Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.books)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="...">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details <span class="glyphicon glyphicon-stats" aria-hidden="true"></span></a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
